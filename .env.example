# Environment Configuration for Trading Platform

# Database
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost/trading_platform

# For SQLite (development/testing):
ENV=development
DATABASE_URL=sqlite:///./trading_platform.db

# Live Data Provider
# Options: statsbomb, sportradar, football-data.org, mock
LIVE_PROVIDER=mock
LIVE_PROVIDER_URL=
LIVE_PROVIDER_KEY=
POLL_INTERVAL=5

# Paystack Payment Processing
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# KYC/AML
KYC_ENABLED=True
AML_CHECK_ENABLED=True

# Trading Limits
MAX_DAILY_DEPOSIT=500000
MAX_DAILY_WITHDRAWAL=250000
MIN_WITHDRAWAL=1000
MIN_DEPOSIT=1000
